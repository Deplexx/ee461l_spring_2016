<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/deviceslist_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:progressDrawable="@drawable/progress_bar_style"
        android:indeterminate="true"/>

    <RelativeLayout
        android:id="@+id/deviceslist_emptyrelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iconempty"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_phone_android_black_24dp"/>

        <TextView
            android:layout_below="@+id/iconempty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 devices"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/deviceslist_listview"
        android:layout_below="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>